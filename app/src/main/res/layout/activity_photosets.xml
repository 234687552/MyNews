<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_photosets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:padding="10dp"
        android:id="@+id/layout_photosets_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:background="#88323232"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_photosets_title"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="16sp" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_photosets_index"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:textColor="#ffffff"
            android:paddingTop="5dp"
            android:id="@+id/tv_photosets_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>